<%- include('./partials/head') %>
<body>
	<%- include('./partials/header') %>
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < 4; i++ ) { %>
			
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= indexProd[i].id %>">
						<figure class="product-box_image">
							<img src="../images/products/<%= indexProd[i].imagen %>" alt="<%= indexProd[i].nombre %>">
						</figure>
						<article class="product-box_data">
							<h2><%= indexProd[i].nombre %></h2>
							<p><%= indexProd[i].descripcion %></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 4; i < 8; i++ ) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= indexProd[i].id %>">
						<figure class="product-box_image">
							<img src="../images/products/<%= indexProd[i].imagen %>" alt="<%= indexProd[i].nombre %>">
						</figure>
						<article class="product-box_data">
							<h2><%= indexProd[i].nombre %></h2>
							<p><%= indexProd[i].descripcion %></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>