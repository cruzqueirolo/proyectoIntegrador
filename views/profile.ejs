<%- include('./partials/head') %> 
<body>
	<%- include('./partials/header') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="../images/users/<%= user.fotoPerfil %>" alt="<%= user.usuario %>" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">
						<a href="/users/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li> Productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < 10; i++ ) { %>
			<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/">
							<figure class="product-box_image">
								<img src= "../images/products/" alt="">
							</figure>
							<article class="product-box_data">
								<h2></h2>
								<p> </p>
								<p> Comentarios: </p>
							</article>
						</a>
					</section>
				</div>
			<% } %> 
		
	<!-- /Mis productos -->

<%- include('./partials/footer') %>
