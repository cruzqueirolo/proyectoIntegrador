<%- include('./partials/head') %>

<body>
	<%- include('./partials/header') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
				<% for( let i = 0; i < indexProd.length; i++ ) { %>
					<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/<%= indexProd[i].id %>">
									<figure class="product-box_image">
										<img src= "../images/products/<%= indexProd[i].imagen %>" alt="<%= indexProd[i].nombre%>">
									</figure>
									<article class="product-box_data">
										<h2><%= indexProd[i].nombre%></h2>
										<p> <%=indexProd[i].descripcion%></p>
										<p>Comentarios: <%= indexProd[i].comentarios.length %></p>
									</article>
								</a>
							</section>
						</div>
					<% } %>
	<%- include('./partials/footer') %>
</body>

</html>