<%- include('./partials/head') %>

<body>
	<%- include('./partials/headerLogueado') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"><form action="/guardar-perfil" method="POST">
				<label for="email">Email:</label><br>
				<input type="email" id="email" name="email" value="<%= email %>" required><br>
				
				<label for="usuario">Usuario:</label><br>
				<input type="text" id="usuario" name="usuario" value="<%= usuario %>" required><br>
				
				<label for="contraseña">Contraseña:</label><br>
				<input type="password" id="contraseña" name="contraseña" required><br>
				
				<label for="fechaNacimiento">Fecha de nacimiento:</label><br>
				<input type="date" id="fechaNacimiento" name="fechaNacimiento" value="<%= fechaNacimiento %>" required><br>
				
				<label for="nroDocumento">Número de documento:</label><br>
				<input type="number" id="nroDocumento" name="nroDocumento" value="<%= nroDocumento %>" required><br><br>
				
				<label for="fotoPerfil">Foto de perfil (URL):</label><br>
				<input type="text" id="fotoPerfil" name="fotoPerfil" value="<%= fotoPerfil %>"><br><br>
				
				<input type="submit" value="Guardar cambios">
			</form>
			</h2>


<%- include('./partials/footer') %>
</body>

</html>