<%- include('./partials/head') %>

<body>
	<%- include('./partials/header') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				<form action="/users/register" method="POST">
					<label for="email">Email:</label><br>
					<input type="email" id="email" name="email" required><br>
					
					<label for="usuario">Usuario:</label><br>
					<input type="text" id="usuario" name="usuario" required><br>
					
					<label for="contraseña">Contraseña:</label><br>
					<input type="password" id="contrasenia" name="contrasenia" required><br>
					
					<label for="fechaNacimiento">Fecha de nacimiento:</label><br>
					<input type="date" id="fecha" name="fecha" required><br>
					
					<label for="nroDocumento">Número de documento:</label><br>
					<input type="number" id="dni" name="dni" required><br><br>
					
					<label for="fotoPerfil">Foto de perfil (URL):</label><br>
					<input type="text" id="fotoPerfil" name="fotoPerfil"><br><br>

					<button type="submit">Registrarse</button>
					
				</form>
				
			</h2>


	<%- include('./partials/footer') %>

</body>

</html>