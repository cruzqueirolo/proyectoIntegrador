<%- include('./partials/head') %>
<body>
	<%- include('./partials/headerLogueado') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<% if (user.fotoPerfil) { %>
					<img src="/images/users/<%= user.fotoPerfil %>" alt="<%= user.usuario %>" class="foto-perfil">
				<% } else { %> 
					<img src="/images/users/user-default.png" alt="<%= user.usuario %>" class="foto-perfil">
				<% } %>
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">
						<%= user.usuario %>
						<a href="/users/edit/<%= user.id %>">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li> Productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i < user.productos.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= user.productos[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= user.productos[i].imagen %>" alt="<%= user.productos[i].nombreProducto %>">
							</figure>
							<article class="product-box_data">
								<h2><%= user.productos[i].nombreProducto %></h2>
								<p><%= user.productos[i].descripcion %></p>
								<p>Comentarios: <%= user.productos[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->

<%- include('./partials/footer') %>
