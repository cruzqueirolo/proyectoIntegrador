<%- include('./partials/head') %>

<body>
    <% if (locals.user != null) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include("./partials/header") %>
    <% } %>

    <!-- Novedades -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Resultados de búsqueda</h2>
            </div>
            <!-- Show the "ultimos" products -->
            <% if (product.length > 0) { %>
                <% for(let i = 0; i < product.length; i++) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">
                            <a href="/product/<%= product[i].id %>">
                                <figure class="product-box_image">
                                    <img src="../images/products/<%= product[i].imagen %>" alt="<%= product[i].nombreProducto %>">
                                </figure>
                                <article class="product-box_data">
                                    <h2><%= product[i].nombreProducto %></h2>
                                    <p><%= product[i].descripcion %></p>
                                    <p>Comentarios:</p>
                                </article>
                            </a>
                        </section>
                    </div>
                <% } %>
            <% } else { %>
                <div class="col-12">
					<p class="no-results-message">No se encontraron productos que coincidan con la búsqueda.</p>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('./partials/footer') %>
</body>

</html>
