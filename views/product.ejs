<%- include('./partials/head') %>
<body>
	
	<%- include('./partials/header') %>
	

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= indexProd[id].nombre %></h2> 
			<p class="product-detail-description">
				<a href="/product/add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="../images/products/<%= indexProd[id].imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= indexProd[id].descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<% for( let i = 0; i < indexProd[id].comentarios.length; i++ ) { %>
					<section class="comments">
						<article>
							<img src="<%= indexProd[id].comentarios[i].imagen_perfil %>" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/users/<%= indexProd[id].comentarios[i].id_user %>"><%= indexProd[id].comentarios[i].nombre %> </a> </strong>
								<%= indexProd[id].comentarios[i].comentario %> </p>
							</div>
						</article>

					</section>
					<% } %>
					<form class="form" action="" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>	
			</div>
		</div>
	</div>
	<!-- /product detail -->

<%- include('./partials/footer') %>

</body>	
</html>