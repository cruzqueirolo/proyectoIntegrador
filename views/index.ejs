<%- include('./partials/head') %>
<body>
	<% if (locals.user !=null) { %>
		<%- include('./partials/headerLogueado') %>
			<% } else { %>
				<%- include("./partials/header") %>
					<% } %>
	
	<!-- Banner -->
	<div class="banner">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < 4; i++ ) { %>
			
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= product[i].id %>">
						<figure class="product-box_image">
							<img src="../images/products/<%= product[i].imagen %>" alt="<%= product[i].nombreProducto %>"
							onerror="this.onerror=null;this.src='/images/defaultprod.jpg'">
							<!-- funcion oneerror para que si la foto no se craga se muestre una imagen default -->
						</figure>
						<article class="product-box_data">
							<h2><%= product[i].nombreProducto %></h2>
							<p><%= product[i].descripcion %></p>
							<p>Comentarios: <%= product[i].comentarios.length %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products-->
			<% for( let i = 4; i < 8; i++ ) { %> 
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= product[i].id %>">
						<figure class="product-box_image">
							<img src="../images/products/<%= product[i].imagen %>" alt="<%= product[i].nombreProducto %>"
							onerror="this.onerror=null;this.src='/images/defaultprod.jpg'">
							<!-- funcion oneerror para que si la foto no se craga se muestre una imagen default -->
						</figure>
						<article class="product-box_data">
							<h2><%= product[i].nombreProducto %></h2>
							<p><%= product[i].descripcion %></p>
							<p>Comentarios:<%= product[i].comentarios.length %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %> 
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>