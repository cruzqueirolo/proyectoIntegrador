<%- include('./partials/head') %>
<body>
	<% if (locals.user !=null) { %>
		<%- include('./partials/headerLogueado') %>
			<% } else { %>
				<%- include("./partials/header") %>
					<% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<% if (userNotLoged.fotoPerfil) { %>
					<img src="/images/users/<%= userNotLoged.fotoPerfil %>" alt="<%= userNotLoged.usuario %>" class="foto-perfil">
				<% } else { %> 
					<img src="/images/users/user-default.png" alt="<%= userNotLoged.usuario %>" class="foto-perfil">
				<% } %>
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">
						<%= userNotLoged.usuario %>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" width="16" height="16"><path d="M38.8 5.1C28.4-3.1 13.3-1.2 5.1 9.2S-1.2 34.7 9.2 42.9l592 464c10.4 8.2 25.5 6.3 33.7-4.1s6.3-25.5-4.1-33.7L525.6 386.7c39.6-40.6 66.4-86.1 79.9-118.4c3.3-7.9 3.3-16.7 0-24.6c-14.9-35.7-46.2-87.7-93-131.1C465.5 68.8 400.8 32 320 32c-68.2 0-125 26.3-169.3 60.8L38.8 5.1zm151 118.3C226 97.7 269.5 80 320 80c65.2 0 118.8 29.6 159.9 67.7C518.4 183.5 545 226 558.6 256c-12.6 28-36.6 66.8-70.9 100.9l-53.8-42.2c9.1-17.6 14.2-37.5 14.2-58.7c0-70.7-57.3-128-128-128c-32.2 0-61.7 11.9-84.2 31.5l-46.1-36.1zM394.9 284.2l-81.5-63.9c4.2-8.5 6.6-18.2 6.6-28.3c0-5.5-.7-10.9-2-16c.7 0 1.3 0 2 0c44.2 0 80 35.8 80 80c0 9.9-1.8 19.4-5.1 28.2zm51.3 163.3l-41.9-33C378.8 425.4 350.7 432 320 432c-65.2 0-118.8-29.6-159.9-67.7C121.6 328.5 95 286 81.4 256c8.3-18.4 21.5-41.5 39.4-64.8L83.1 161.5C60.3 191.2 44 220.8 34.5 243.7c-3.3 7.9-3.3 16.7 0 24.6c14.9 35.7 46.2 87.7 93 131.1C174.5 443.2 239.2 480 320 480c47.8 0 89.9-12.9 126.2-32.5zm-88-69.3L302 334c-23.5-5.4-43.1-21.2-53.7-42.3l-56.1-44.2c-.2 2.8-.3 5.6-.3 8.5c0 70.7 57.3 128 128 128c13.3 0 26.1-2 38.2-5.8z"/></svg>
						</i>Seguidores</li>
						<li><%= userNotLoged.productos.length %> Productos</li>
						
						<li><%= totalComentarios %> Comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i < userNotLoged.productos.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= userNotLoged.productos[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= userNotLoged.productos[i].imagen %>" alt="<%= userNotLoged.productos[i].nombreProducto %>"
								onerror="this.onerror=null;this.src='/images/defaultprod.jpg'">
								<!-- funcion oneerror para que si la foto no se craga se muestre una imagen default -->
							</figure>
							<article class="product-box_data">
								<h2><%= userNotLoged.productos[i].nombreProducto %></h2>
								<p><%= userNotLoged.productos[i].descripcion %></p>
								<p>Comentarios:<%= userNotLoged.productos[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->

<%- include('./partials/footer') %>
